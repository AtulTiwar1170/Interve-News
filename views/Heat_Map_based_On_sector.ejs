      <% if( !ques ) { %>
        <p class="mt-5 mr-5">Loading...</p>
      <% } else { %>
        <div class="w-full h-[30rem] overflow-scroll p-5">
          <% if( ques && ans){ %>
            <div class=" w-[90%] mt-5 text-wrap px-9 font-bold font-serif bg-zinc-200 py-3 rounded-lg">
              Q:: <%= ques %>
            </div>
            <div class="min-h-20  w-full  mt-5 px-9 font-serif bg-zinc-200 rounded-lg py-3">
              <%= ans %>
            </div>
          <% } %>
        </div>
      <% } %>






      <form class="flex relative right-0 bottom-0" action="/chat" method="post" autocomplete="off">
        <input class="px-7 py-5 w-[90%] rounded-l-lg outline-none" type="text" placeholder="Enter your prompt..." name="question">
        <input class="px-7 py-5 font-bold  rounded-r-lg" type="submit" value="Ask me?">
      </form>
